div.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
  div.container
    button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-responsive-collapse")
      span.icon-bar
      span.icon-bar
      span.icon-bar

  a.navbar-brand James Brinkerhoff | th3brink
  div.nav-collapse.collapse.navbar-responsive-collapse
    ul.nav.navbar-nav
      li(ng-class="{true:'active', false: ''}[navLocation == 'blog']")
        a(href="/") Blog
      li(ng-class="{true:'active', false: ''}[navLocation == 'portfolio']")
        a(href="/portfolio") Th3 Portfolio
      //li(ng-class="{true:'active', false: ''}[navLocation == 'gamer']")
        a(href="/gamer") Th3 Gamer
      //li(ng-class="{true:'active', false: ''}[navLocation == 'freelance']")
        a(href="/freelance") Freelance

    ul.nav.navbar-nav.pull-right.ng-cloak
      li(ng-hide="user.type")
        a(ng-click="loginBox = true") login/create
      li.btn-group(ng-show="user.type", style="margin-top: 6px", dropdown)
        button.btn.btn-default(type="button")
          i.glyphicon.glyphicon-user
          span.icon-buffer-left {{user.username}}
        button.btn.btn-default.dropdown-toggle(type="button", toggle-dropdown)
          span.caret
          span.sr-only
        ul.dropdown-menu(role="menu")
          li(ng-show="user.type === 'admin'")
            a(href="/addPost") Add Post
          li(ng-show="user.type === 'admin'")
            a(href="/addPortfolio") Add Portfolio
          li(ng-show="user.type === 'admin'")
            a(href="/managePosts") Manage Posts
          li(ng-show="user.type === 'admin'")
            a(href="/managePortfolio") Manage portfolio
          //li(ng-show="user.type === 'admin'")
            a(href="/learnMyWords") Learn My Words
          li
            a(ng-click="logout()") Logout